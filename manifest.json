{
    "manifest_version": 2,
    "name": "Signal",
    "version": "1",
    "description": "Are you reading fake news?",
    "author": "Signal",
    "permissions": [
        "tabs",
        "activeTab",
        "http://*/*",
        "https://*/*",
        "<all_urls>"
     ],
    "background": {
        "scripts": ["jquery.js", "signal.js"]
    },
    
    "incognito": "split",

    "browser_action": {
        "default_icon": {
            "128": "images/idle128.png"
        },
        "default_title": "Signal"
    }
}